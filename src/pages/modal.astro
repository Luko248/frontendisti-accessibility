---
import Layout from "../layouts/Layout.astro";
const dialogClassName =
  "w-full max-w-md space-y-4 rounded-2xl border border-slate-200 bg-white p-6 text-left shadow-2xl mx-auto my-auto";
const dialogStyle =
  "display: var(--dialog_display, none); opacity: var(--dialog_opacity, 0); translate: 0 var(--dialog_trans-y, 5svb); transition-property: overlay display opacity; transition-duration: 0.3s; transition-behavior: allow-discrete;";
const openButtonClassName =
  "inline-flex items-center justify-center rounded-full px-5 py-2 text-sm font-semibold text-white shadow transition";
const closeButtonClassName =
  "inline-flex items-center justify-center rounded-full bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-700";
---

<Layout
  title="Modal | Frontendisti Accessibility"
  description="Test accessible dialog patterns with focus management, keyboard navigation, backdrop interactions, and ARIA attributes for screen readers."
>
  <div class="flex items-center justify-center h-full">
    <section
      class="flex w-full max-w-3xl flex-col items-center gap-10 text-center"
    >
      <header class="space-y-4 text-center mx-auto">
        <h1 class="text-4xl font-semibold text-gray-900 mx-auto">
          Modal Pattern Playground
        </h1>
        <p class="text-lg text-gray-800">
          Explore native dialog patterns with progressive enhancement and
          accessible controls.
        </p>
      </header>

      <div class="flex flex-col items-center gap-4">
        <button
          type="button"
          command="show-modal"
          commandfor="myDialog"
          aria-haspopup="dialog"
          aria-controls="myDialog"
          data-variant="primary"
          class={openButtonClassName}
        >
          Open dialog
        </button>

        <dialog
          id="myDialog"
          role="dialog"
          class={dialogClassName}
          style={dialogStyle}
          aria-labelledby="dialog-label"
          aria-describedby="dialog-desc"
          aria-modal="true"
          aria-keyshortcuts="Escape"
          closedby="any"
        >
          <h2
            id="dialog-label"
            class="mt-0 text-xl font-semibold text-slate-900"
          >
            Important Information
          </h2>
          <div id="dialog-desc" class="space-y-3">
            <p class="text-sm text-slate-700">
              This dialog provides important details about the functionality.
              Screen readers will announce this content for better
              accessibility.
            </p>
            <ul class="text-sm text-slate-700 list-disc list-inside space-y-1">
              <li>First information point</li>
              <li>Second information point</li>
              <li>Third information point</li>
            </ul>
          </div>
          <button
            type="button"
            command="close"
            commandfor="myDialog"
            aria-label="Close dialog"
            aria-controls="myDialog"
            class={closeButtonClassName}
          >
            Close
          </button>
        </dialog>
      </div>
    </section>
  </div>

  <style>
    button[data-variant="primary"] {
      background-color: var(--color-primary);
      transition:
        background-color 0.25s ease,
        filter 0.25s ease;
    }

    button[data-variant="primary"]:hover {
      background-color: color-mix(
        in oklch,
        var(--color-primary) 85%,
        white 15%
      );
    }

    button[data-variant="primary"]:focus {
      background-color: color-mix(
        in oklch,
        var(--color-primary) 80%,
        white 20%
      );
    }

    #myDialog::backdrop {
      background-color: var(--color-modal-backdrop);
    }

    #myDialog[open] {
      --dialog_display: block;
      --dialog_opacity: 1;
      --dialog_trans-y: 0;

      @starting-style {
        --dialog_opacity: 0;
        --dialog_trans-y: 5svb;
      }
    }
  </style>
</Layout>
