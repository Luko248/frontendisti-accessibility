---
import Layout from "../layouts/Layout.astro";
const dialogClassName =
  "w-full max-w-md space-y-4 rounded-2xl border border-slate-200 bg-white p-6 text-left shadow-2xl mx-auto my-auto";
const dialogStyle =
  "display: var(--dialog_display, none); opacity: var(--dialog_opacity, 0); translate: 0 var(--dialog_trans-y, 5svb); transition-property: overlay display opacity; transition-duration: 0.3s; transition-behavior: allow-discrete;";
const openButtonClassName =
  "inline-flex items-center justify-center rounded-full px-5 py-2 text-sm font-semibold text-white shadow transition focus:outline focus:outline-2 focus:outline-offset-2 focus:outline-primary/70";
const closeButtonClassName =
  "inline-flex items-center justify-center rounded-full bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-700 focus:outline focus:outline-2 focus:outline-offset-2 focus:outline-slate-900";
---

<Layout title="Modal">
  <div class="flex items-center justify-center h-full">
    <section
      class="flex w-full max-w-3xl flex-col items-center gap-10 text-center"
    >
      <header class="space-y-4 text-center">
        <h1 class="text-4xl font-semibold text-gray-900 mx-auto">
          Modal Pattern Playground
        </h1>
        <p class="text-lg text-gray-700">
          Explore native dialog patterns with progressive enhancement and
          accessible controls.
        </p>
      </header>

      <div class="flex flex-col items-center gap-4">
        <dialog
          id="myDialog"
          class={dialogClassName}
          style={dialogStyle}
          aria-labelledby="modal-title"
          aria-describedby="modal-description"
          aria-modal="true"
          closedby="any"
        >
          <h3
            id="modal-title"
            class="mt-0 text-xl font-semibold text-slate-900"
          >
            Dialog Title
          </h3>
          <p id="modal-description" class="text-sm text-slate-600">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officia,
            inventore!
          </p>
          <button
            type="button"
            data-modal-action="close"
            aria-controls="myDialog"
            class={closeButtonClassName}
          >
            Close modal
          </button>
        </dialog>

        <button
          type="button"
          data-modal-action="open"
          aria-haspopup="dialog"
          aria-expanded="false"
          aria-controls="myDialog"
          data-variant="primary"
          class={openButtonClassName}
        >
          Open modal
        </button>
      </div>
    </section>
  </div>

  <style>
    button[data-variant="primary"] {
      background-color: var(--color-primary);
      transition:
        background-color 0.25s ease,
        filter 0.25s ease;
    }

    button[data-variant="primary"]:hover {
      background-color: color-mix(
        in oklch,
        var(--color-primary) 85%,
        white 15%
      );
    }

    button[data-variant="primary"]:focus {
      filter: drop-shadow(0 0 0.45rem var(--color-primary));
      background-color: color-mix(
        in oklch,
        var(--color-primary) 80%,
        white 20%
      );
    }

    #myDialog::backdrop {
      background-color: var(--color-modal-backdrop);
    }

    #myDialog[open] {
      --dialog_display: block;
      --dialog_opacity: 1;
      --dialog_trans-y: 0;

      @starting-style {
        --dialog_opacity: 0;
        --dialog_trans-y: 5svb;
      }
    }
  </style>
</Layout>
