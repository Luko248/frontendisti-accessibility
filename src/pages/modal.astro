---
import Layout from "../layouts/Layout.astro";
const dialogClassName =
  "w-full max-w-md space-y-4 rounded-2xl border border-slate-200 bg-white p-6 text-left shadow-2xl";
const dialogStyle =
  "display: var(--dialog_display, none); opacity: var(--dialog_opacity, 0); translate: 0 var(--dialog_trans-y, 5svb); transition-property: overlay display opacity; transition-duration: 0.3s; transition-behavior: allow-discrete;";
const openButtonClassName =
  "inline-flex items-center justify-center rounded-full bg-primary px-5 py-2 text-sm font-semibold text-white shadow transition hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary/70";
const closeButtonClassName =
  "inline-flex items-center justify-center rounded-full bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900";
---

<Layout title="Modal">
  <main class="flex min-h-[calc(100vh-var(--nav-height))] items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 px-6 py-16">
    <section class="flex w-full max-w-3xl flex-col items-center gap-10 text-center">
      <header class="space-y-4">
        <h1 class="text-4xl font-semibold text-gray-900">Modal Pattern Playground</h1>
        <p class="text-lg text-gray-700">
          Explore native dialog patterns with progressive enhancement and accessible controls.
        </p>
      </header>

      <div class="flex flex-col items-center gap-4">
        <dialog
          id="myDialog"
          class={dialogClassName}
          style={dialogStyle}
          aria-labelledby="modal-title"
          aria-describedby="modal-description"
          aria-modal="true"
        >
          <h3 id="modal-title" class="mt-0 text-xl font-semibold text-slate-900">
            Dialog Title
          </h3>
          <p id="modal-description" class="text-sm text-slate-600">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officia, inventore!
          </p>
          <button
            type="button"
            command="close"
            commandfor="myDialog"
            aria-controls="myDialog"
            class={closeButtonClassName}
          >
            Close modal
          </button>
        </dialog>

        <button
          type="button"
          command="show-modal"
          commandfor="myDialog"
          aria-haspopup="dialog"
          aria-controls="myDialog"
          class={openButtonClassName}
        >
          Open modal
        </button>
      </div>
    </section>
  </main>

  <style>
    #myDialog::backdrop {
      background-color: hsl(0 0% 0% / 0.33);
    }

    #myDialog[open] {
      --dialog_display: block;
      --dialog_opacity: 1;
      --dialog_trans-y: 0;

      @starting-style {
        --dialog_opacity: 0;
        --dialog_trans-y: 5svb;
      }
    }
  </style>
</Layout>
