---
import Layout from "../layouts/Layout.astro";
const sectionClassName =
  "flex w-full max-w-3xl flex-col items-center gap-10 text-center";
const noteClassName = "text-sm text-slate-600";
---

<Layout title="Carousel">
  <main
    class="flex min-h-[calc(100vh-var(--nav-height))] items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 px-6 py-16"
  >
    <section class={sectionClassName}>
      <header class="space-y-4">
        <h1 class="text-4xl font-semibold text-gray-900">
          Carousel Pattern Playground
        </h1>
        <p class="text-lg text-gray-700">
          Modern scroll-linked carousel using scroll markers and
          anchor-positioning buttons.
        </p>
      </header>

      <div class="carousel-demo mx-auto w-full max-w-[500px]">
        <div
          class="carousel"
          role="group"
          aria-roledescription="carousel"
          aria-label="Pet photo carousel"
        >
          <div
            role="group"
            aria-roledescription="slide"
            aria-label="Slide 1 of 3: playful dog looking toward the camera"
          >
            <img
              src="https://place.dog/500/500"
              alt="Playful dog looking toward the camera"
              loading="lazy"
            />
          </div>
          <div
            role="group"
            aria-roledescription="slide"
            aria-label="Slide 2 of 3: resting cat observing the scene"
          >
            <img
              src="https://placecats.com/500/500"
              alt="Resting cat observing the scene"
              loading="lazy"
            />
          </div>
          <div
            role="group"
            aria-roledescription="slide"
            aria-label="Slide 3 of 3: bear standing in a forest"
          >
            <img
              src="https://placebear.com/500/500"
              alt="Bear standing in a forest"
              loading="lazy"
            />
          </div>
        </div>
      </div>
      <p class={noteClassName}>
        Demonstrates experimental scroll-marker and scroll-button behaviours.
        Browsers without support fall back to horizontal scrolling.
      </p>
    </section>
  </main>

  <style>
    .carousel-demo {
      container-type: inline-size;
    }

    .carousel-demo * {
      box-sizing: border-box;
    }

    .carousel-demo .carousel {
      display: grid;
      scroll-snap-type: x mandatory;
      grid-template-columns: repeat(3, 100cqi);
      overflow-x: auto;
      anchor-name: --carousel;
      column-gap: 1rem;
      border-radius: 1.25rem;
      scroll-marker-group: after;
      scroll-behavior: smooth;
      counter-reset: snap-counter 0;
      counter-increment: snap-counter;
    }

    .carousel-demo .carousel::-webkit-scrollbar {
      height: 0;
    }

    .carousel-demo .carousel::scroll-marker-group {
      display: flex;
      block-size: 1.5rem;
      gap: 1rem;
      justify-content: center;
      margin-block-start: 1rem;
    }

    .carousel-demo .carousel::scroll-button(*) {
      display: grid;
      position: absolute;
      position-anchor: --carousel;
      border-radius: 100vmax;
      color: var(--color-primary);
      font-weight: bold;
      font-size: 2em;
      line-height: 1;
      aspect-ratio: 1;
      inline-size: 2.5rem;
      border: 2px solid color-mix(in oklch, var(--color-primary) 65%, white 35%);
      background-color: color-mix(
        in oklch,
        var(--color-primary) 15%,
        white 85%
      );
      backdrop-filter: blur(0.75rem);
      transition:
        translate 0.25s ease-out,
        opacity 0.25s ease-out,
        scale 0.25s ease-out;
      cursor: pointer;
      scale: 1.05;
    }

    .carousel-demo .carousel::scroll-button(*):disabled {
      opacity: 0;
      translate: 0;
    }

    .carousel-demo .carousel::scroll-button(left) {
      content: "‹" / "Previous slide";
      position-area: center left;
      translate: calc(100% + 0.5rem) 0;
    }

    .carousel-demo .carousel::scroll-button(right) {
      content: "›" / "Next slide";
      position-area: center right;
      translate: calc(-100% - 0.5rem) 0;
    }

    .carousel-demo .carousel > div {
      container-type: scroll-state size;
      display: grid;
      place-items: center;
      counter-increment: snap-counter;
      block-size: clamp(16rem, 50svb, 22rem);
      border-radius: 1rem;
      overflow: hidden;
      scroll-snap-stop: always;
      scroll-snap-align: center;
    }

    .carousel-demo .carousel > div::scroll-marker {
      content: counter(snap-counter) / attr(aria-label);
      background-color: var(
        --marker-bg,
        color-mix(in oklch, var(--color-primary) 55%, white 45%)
      );
      inline-size: 1.5rem;
      aspect-ratio: 1;
      display: grid;
      text-decoration: none;
      place-items: center;
      color: white;
      font-weight: bold;
      font-size: small;
      box-sizing: border-box;
      border-radius: 100vmax;
      scale: 1;
      transition:
        scale 0.25s ease-out,
        background-color 0.25s ease-out,
        border-color 0.25s ease-out;
      border: 2px solid color-mix(in oklch, var(--color-primary) 65%, white 35%);
    }

    .carousel-demo .carousel > div::scroll-marker:target-current {
      --marker-bg: var(--color-primary);
      scale: 1.2;
    }

    .carousel-demo .carousel > div::scroll-marker:target-before,
    .carousel-demo .carousel > div::scroll-marker:target-after {
      scale: 0.8;
    }

    .carousel-demo .carousel > div img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    @supports not (scroll-marker-group: after) {
      .carousel-demo .carousel::scroll-marker-group,
      .carousel-demo .carousel::scroll-button(left),
      .carousel-demo .carousel::scroll-button(right) {
        display: none;
      }
    }
  </style>
</Layout>
